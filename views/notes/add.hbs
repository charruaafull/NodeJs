<div class="container">
    {{#each errors}}
        <div class="row">
            <div class="col-lg-12">
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    {{text}}
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    {{/each}}

    {{#if success}}
        <div class="row">
            <div class="col-lg-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    Agregado correctamente
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    {{/if}}

    <div class="row">
        <div class="col-lg-4 p-3 mx-auto">

            <div class="card">
                <form action="/notes/new-note" method="POST">
                    <div class="card-header">
                        Nuevo Usuario
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Nombre</label>
                            <input type="text" name="name" value="{{name}}" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Apellido</label>
                            <input type="text" name="lastname" value="{{lastname}}" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Usuario</label>
                            <input type="text" name="username" value="{{username}}" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="password" value="{{password}}" class="form-control">
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="text" class="btn btn-success btn-block">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    Usuarios
                </div>
                <div class="card-body">
                    {{#if users.length }}
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="bg-dark text-white">
                                <tr>
                                    <td>Nombre</td>
                                    <td>Apellido</td>
                                    <td>Usuario</td>
                                    <td>Acciones</td>
                                </tr>
                                </thead>
                            <tbody>
                                {{#each users}}
                                <tr>
                                    <td>{{name}}</td>
                                    <td>{{lastname}}</td>
                                    <td>{{username}}</td>
                                    <td>
                                        <a href="/notes/upd/{{_id}}">Editar</a>
                                        <a href="/notes/del/{{_id}}">Eliminar</a>
                                    </td>
                                </tr>
                                </tbody>
                                {{/each}}
                            </table>
                        </div>
                    {{else}}
                        No hay registros para mostrar
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>